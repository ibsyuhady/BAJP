<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.JetpackPlay" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/grey_900</item>
        <item name="colorPrimaryVariant">@color/grey_900_dark</item>
        <item name="colorOnPrimary">@color/blue_grey_50_dark</item>
        <item name="colorSecondary">@color/teal_500</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/grey_900_dark</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="fontFamily">serif</item>
