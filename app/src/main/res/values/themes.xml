    <style name="splashScreen" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen_layout</item>
    </style>

    <style name="Theme.JetpackPlay.TextAppearance.Transparent" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">@android:color/transparent</item>
    </style>

    <style name="Theme.JetpackPlay.TextAppearance.Title.ActionBar" parent="TextAppearance.JetpackPlay.TextAppearance.Title">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Theme.JetpackPlay.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="Theme.JetpackPlay.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="TextAppearance.JetpackPlay.TextAppearance.Detail" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">14sp</item>
        <item name="android:lineHeight" tools:targetApi="p">20sp</item>
    </style>

    <style name="TextAppearance.JetpackPlay.TextAppearance.Title" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:lineHeight" tools:targetApi="p">20sp</item>
    </style>

    <style name="Theme.JetpackPlay.Poster">
        <item name="android:layout_width">@dimen/poster_width</item>
        <item name="android:layout_height">@dimen/poster_height</item>
        <item name="contentDescription">@string/movies_poster</item>
        <item name="android:scaleType">fitXY</item>
    </style>

</resources>