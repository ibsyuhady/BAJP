<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.JetpackPlay" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/blue_grey_50</item>
        <item name="colorOnPrimary">@color/blue_grey_700</item>
        <item name="colorSecondary">@color/teal_500</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/blue_grey_900</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="splashScreen" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen_layout</item>
    </style>

    <style name="Theme.JetpackPlay.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.JetpackPlay.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="TextAppearance.JetpackPlay.TextAppearance.Detail" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">3</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.JetpackPlay.TextAppearance.Title" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:lineHeight" tools:targetApi="p">20sp</item>
    </style>

</resources>